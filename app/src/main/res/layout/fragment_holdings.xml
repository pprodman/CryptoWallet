<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".views.HoldingsFragment">

    <!-- Título de la Wallet -->
    <TextView
        android:id="@+id/walletTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi Wallet"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <!-- Card mostrando el balance de la wallet -->
    <androidx.cardview.widget.CardView
        android:id="@+id/walletBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- RecyclerView para mostrar las criptomonedas añadidas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHoldings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</LinearLayout>
